extends index

mixin gallery(g)
  .card-title
    a(href="/gallery/" + g.slug)
      = g.title
      .card-body
        p= g.description

block append head
  link(href=page.actorId, rel="alternate", type="application/activity+json")

block content
  .hero-content
    .w-full
      h1.mb-6.text-5xl.font-bold= page.title
    nav
      each g in galleries
        .card.card-compact.w-96.bg-base-100.shadow-xl
          .card-body
            h2.card-title
              +gallery(g)
            .cards-actions.justify-end
          g.description
        br
